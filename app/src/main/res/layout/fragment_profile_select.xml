<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wht_bg">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/tint_bg"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:text="Username"
            android:id="@+id/alias"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:singleLine="true"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="sig:" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/user_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="125dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/chatBox"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:background="@drawable/tint_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chat_text"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Start a private Chat with this user"
                android:textSize="16sp" />
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:icon="@drawable/chat"
                android:text="Chat" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/addBox"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:background="@drawable/tint_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addText"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Send a Key to allow this user to enter a private channel"
                android:textSize="16sp" />
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:icon="@drawable/global"
                android:text="Invite" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/blockBox"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:background="@drawable/tint_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/blockText"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:text="Block this User, you will not longer send or receive any messages from this user"
                android:textSize="16sp" />
            <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                app:icon="@drawable/block"
                android:text="Block" />
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:icon="@drawable/left"
            android:layout_marginTop="4dp"
            android:text="Back" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>